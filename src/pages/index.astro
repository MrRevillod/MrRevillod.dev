---
import Layout from "../layouts/Layout.astro";
import Header from "../components/main/Header.astro";
import Info from "../components/main/Info.astro";
import Pages from "../components/main/Pages.astro";
import ProfileImage from "../components/main/ProfileImage.astro";
---

<Layout title="Luciano Revillod">
	<main class="h-screen w-8/12 flex flex-row items-center justify-center">
		<article class="w-3/4 flex flex-col gap-10 text-white">
			<Header />
			<Info />
		</article>

		<article class="w-1/4 flex items-center justify-center">
			<ProfileImage />
		</article>
	</main>

	<main class="h-screen w-8/12 flex flex-row items-center justify-center">
		<article class="w-full flex flex-col gap-12 text-white">
			<Pages />
		</article>
	</main>

	<main
		class="h-screen w-8/12 flex flex-col items-center gap-8 justify-center"
	>
		<h1 class="text-7xl font-bold">Contacto</h1>
		<section class="flex flex-row gap-8">
			<a href="https://www.linkedin.com/in/luciano-revillod-dev/">
				<i class="text-4xl hover:cursor-pointer ti ti-brand-linkedin"
				></i>
			</a>

			<a href="">
				<i class="text-4xl hover:cursor-pointer ti ti-brand-discord"
				></i>
			</a>

			<a href="/contacto">
				<i class="text-4xl hover:cursor-pointer ti ti-mail"></i>
			</a>

			<a href="">
				<i class="text-4xl hover:cursor-pointer ti ti-brand-instagram"
				></i>
			</a>
		</section>
	</main>
</Layout>

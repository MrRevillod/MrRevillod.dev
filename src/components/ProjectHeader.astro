---
import DevIcon from "./DevIcon.astro";

interface Props {
    devIcons?: Array<string>;
    projectName: string;
    projectHref: string;
}

const { devIcons, projectName, projectHref } = Astro.props;
---

<style>
    .link::after {
        content: "\1F517";
        font-size: 1.875rem;
        margin-left: 0.5rem;
    }

    .back::before {
        content: "<-";
        color: black;
        background-color: white;
        border-radius: 100%;
        height: 2rem;
        width: 2rem;
        margin-right: 1rem;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        font-weight: 700;
    }
</style>

<>
    <article class="w-full flex-row gap-4 items-center justify-between flex">
        <section class="hidden md:flex flex-row gap-4 items-center">
            <a
                href="/"
                class="back flex items-center justify-center font-semibold"
            >
                {"Volver"}</a
            >
        </section>
    </article>
    <article
        class="w-full md:flex-row flex-col gap-4 md:items-center items-start justify-between flex"
    >
        <a
            href={projectHref}
            class="hover:underline link text-3xl flex font-bold"
            target="_blank"
        >
            {projectName}
        </a>
        <section class="flex flex-row gap-6">
            {
                devIcons.map((icon) => {
                    return <DevIcon iconClass={icon} />;
                })
            }
        </section>
    </article>
</>

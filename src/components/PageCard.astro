---
interface Props {
  pageName: string;
  url: string;
  imgSrc: string;
  desc: string;
}

const { pageName, url, imgSrc, desc } = Astro.props;
---

<a
  class="flex flex-col items-center justify-center h-60 md:h-72 rounded-md hover:-translate-y-2 transform transition"
  href={url}
>
  <div class="w-full h-2/3 p-0 bg-white">
    <img
      src={imgSrc}
      alt="project-image"
      class="w-full h-full object-cover object-center"
    />
  </div>

  <div
    class="h-1/3 w-full flex items-center bg-neutral-800 rounded-bl-md rounded-br-md"
  >
    <div class="flex flex-col gap-2 ml-4">
      <h4 class="text-base md:text-lg font-semibold">{pageName}</h4>
      <p class="-mt-2 md:mt-0 text-xs text-neutral-100 pr-3">{desc}</p>
    </div>
  </div>
</a>

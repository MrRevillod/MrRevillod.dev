---
interface Props {
    pageName: string;
    url: string;
    imgSrc: string;
    desc: string;
}

const { pageName, url, imgSrc, desc } = Astro.props;
---

<a
    class="flex flex-col items-center justify-center h-72 rounded-md hover:-translate-y-1 transform transition"
    href={url}
>
    <img src={imgSrc} alt="image" class="h-2/3 w-full object-cover" />
    <div
        class="h-1/3 w-full flex items-center bg-neutral-800 rounded-bl-md rounded-br-md"
    >
        <div class="flex flex-col gap-2 ml-4">
            <h4 class="text-lg font-semibold">{pageName}</h4>
            <p class="text-xs text-neutral-300">{desc}</p>
        </div>
    </div>
</a>

---
interface Props {
    first_image: string;
    second_image: string;
    third_image: string;
}

const { first_image, second_image, third_image } = Astro.props;

import ProjectImage from "./ProjectImage.tsx";
---

<article
    class="md:h-1/2 h-1/3 grid md:grid-cols-2fr-1fr md:grid-rows-1 grid-cols-1 grid-rows-1 gap-4"
>
    <section class="min-h-full rounded-md md:block hidden">
        <ProjectImage
            client:visible
            transition:persist
            image={first_image}
            customClasses={"h-full w-full"}
        />
    </section>
    <section
        class="min-h-full grid grid-cols-2 grid-rows-1 gap-4 md:grid-cols-1 md:grid-rows-2"
    >
        <div class="h-full w-full rounded-md overflow-hidden">
            <ProjectImage
                client:visible
                transition:persist
                image={second_image}
                customClasses={"w-full h-full object-cover"}
            />
        </div>
        <div class="h-full w-full rounded-md overflow-hidden">
            <ProjectImage
                client:visible
                transition:persist
                image={third_image}
                customClasses={"w-full h-full object-cover"}
            />
        </div>
    </section>
</article>
